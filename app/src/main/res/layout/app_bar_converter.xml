<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">

    <Spinner
        android:id="@+id/spinner_converter_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="@dimen/app_margin_medium"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:spinnerMode="dialog"
        android:layout_weight="1"
        android:gravity="start"/>

    <ImageButton
        android:id="@+id/btn_converter_swap_currencies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/app_margin"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_swap_horiz_black_36dp"
        android:layout_weight="1" />

    <Spinner
        android:id="@+id/spinner_converter_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="@dimen/app_margin_medium"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:gravity="end"/>

</LinearLayout>